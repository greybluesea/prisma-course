generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int      @default(autoincrement())
  email String   @unique
  name String
  role Role? @default(USER)


  @@map("users")
  @@id([email,name])
  @@index([id,email])
  @@unique([name,role])
}

enum Role {
  USER
  ADMIN
}